@model MVCandKAFKA3.Product

@{
    ViewData["Title"] = "Mahsulotni o'chirish";
}

<div class="page-container">
    <div class="form-card delete-card">
        <div class="form-header delete-header">
            <h2>🗑️ Mahsulotni o'chirish</h2>
        </div>

        <div class="delete-content">
            <div class="warning-box">
                <div class="warning-icon">⚠️</div>
                <div>
                    <h3>Rostdan ham bu mahsulotni o'chirmoqchimisiz?</h3>
                    <p>Bu amalni qaytarib bo'lmaydi!</p>
                </div>
            </div>

            <div class="product-details">
                <div class="detail-row">
                    <span class="detail-label">ID:</span>
                    <span class="detail-value">@Model.Id</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Nomi:</span>
                    <span class="detail-value"><strong>@Model.Name</strong></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Kategoriya:</span>
                    <span class="detail-value">@Model.Category</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Narx:</span>
                    <span class="detail-value">@Model.Price.ToString("N0") so'm</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Miqdor:</span>
                    <span class="detail-value">@Model.Quantity dona</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Manufacturer))
                {
                    <div class="detail-row">
                        <span class="detail-label">Ishlab chiqaruvchi:</span>
                        <span class="detail-value">@Model.Manufacturer</span>
                    </div>
                }
            </div>

            <form method="post" action="@Url.Action("Delete", new { id = Model.Id })">
                @Html.AntiForgeryToken()
                <div class="form-actions">
                    <button type="submit" class="btn btn-danger">✅ Ha, o'chirish</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">❌ Yo'q, bekor qilish</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .page-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem 2rem;
    }

    .delete-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }

    .form-header h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .product-form, .delete-content {
        padding: 2rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #333;
        }

    .required {
        color: #dc3545;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e1e8ed;
        border-radius: 6px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    /* Delete specific styles */
    .warning-box {
        background-color: #fff3cd;
        border: 2px solid #ffc107;
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        gap: 1rem;
        align-items: start;
        margin-bottom: 2rem;
    }

    .warning-icon {
        font-size: 2rem;
    }

    .warning-box h3 {
        color: #856404;
        margin: 0 0 0.5rem 0;
        font-size: 1.2rem;
    }

    .warning-box p {
        color: #856404;
        margin: 0;
    }

    .product-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #dee2e6;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #6c757d;
        font-weight: 500;
    }

    .detail-value {
        color: #212529;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #667eea;
        color: white;
    }

        .btn-primary:hover {
            background-color: #5568d3;
            transform: translateY(-2px);
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    {
        grid-template-columns: 1fr;
        gap: 0;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    .warning-box {
        flex-direction: column;
        text-align: center;
    }

    .detail-row {
        flex-direction: column;
        gap: 0.25rem;
    }

    }
</style>